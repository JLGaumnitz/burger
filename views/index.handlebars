<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<h1> Eat-Da-Burger! </h1>
		</div>
		<div class="col-md-6" class="task">
			<div class="row" id="burgers-entered">
				{{#each burger_data}}
				{{#unless this.devoured}}
				<div class="col-md-9">
					<p class="burgers-submitted">You ordered: {{this.burger_name}}</p>
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-danger">Devour it!</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			{{#each burger_data}}
			{{#if this.devoured}}
			<input class="form-control" type="text" placeholder="You devoured: {{this.burger_name}}" readonly>
			{{> burgers/burger-block}}
			{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<p id="button-instructions">Enter a burger you wish to eat and press "Submit."</p>
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-danger" id="text-enter-button">Submit</button>
			</form>
		</div>
	</div>
</div>